{
  "extends": "@ouroboros/typescript-config/base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "sourceMap": true,
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./out",
    "types": [
      "node"
    ],
  },
  "include": ["src/**/*.ts", "./*.config.ts"],
  "exclude": ["node_modules" ],
}
