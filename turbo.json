{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "lint",
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "env": ["R2_*", "DB_*", "GRAPHQL_*", "TEMPORAL_*"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development",
        ".env"
      ]
    },
    "schemagen": {
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "dependsOn": [
        "^schemagen"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
