{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["R2_ACCESS_KEY_ID", "R2_SECRET_ACCESS_KEY", "R2_ACCOUNT_ID", "R2_BUCKET_NAME"],
  "globalDotEnv": [".env,", ".env.development"],
  "globalDependencies": ["**/.env.*local", ".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dotEnv": [".env.development", ".env"],
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "dependsOn": ["^codegen"],
      "cache": false,
      "persistent": true
    }
  }
}
