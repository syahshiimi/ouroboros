{
  "name": "@ouroboros/weathercore-database",
  "type": "module",
  "private": "true",
  "exports": {
    ".": {
      "types": "./out/src/index.d.ts",
      "default": "./out/src/index.js"
    },
    "./repository": {
      "types": "./out/src/repository.d.ts",
      "default": "./out/src/repository.js"
    }
  },
  "scripts": {
